{
  "model": {
    "default_max_tokens": 2048,
    "default_temperature": 0.5,
    "max_chars_opus": 20000,
    "max_chars_haiku": 180000,
    "bedrock_model_id": "us.anthropic.claude-3-7-sonnet-20250219-v1:0",
    "litellm_model": "gpt-4",
    "ollama_model": "llama3.2",
    "ollama_host": "http://internal-ollama:11434"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 3023,
    "log_level": "INFO"
  },
  "circuit_breaker": {
    "failure_threshold": 3,
    "timeout_seconds": 600
  },
  "validation": {
    "max_session_id_length": 50,
    "max_topic_length": 500,
    "max_perspective_name_length": 50,
    "max_custom_prompt_length": 5000
  },
  "session": {
    "default_ttl_hours": 12,
    "cleanup_interval_seconds": 300,
    "max_active_sessions": 500
  },
  "metrics": {
    "max_history_size": 5000,
    "retention_days": 30
  },
  "retry": {
    "max_retries": 5,
    "initial_delay": 2.0,
    "backoff_factor": 1.5,
    "max_delay": 120.0
  },
  "reasoning": {
    "max_iterations": 15,
    "cot_timeout_seconds": 20.0,
    "summary_timeout_seconds": 3.0,
    "default_temperature": 0.5
  },
  "profiling": {
    "enabled": true,
    "level": "basic",
    "sampling_rate": 0.05,
    "track_tokens": true,
    "track_costs": true,
    "track_memory": false,
    "track_network_timing": true,
    "max_history_size": 50000,
    "cost_alert_threshold_usd": 500.0,
    "latency_alert_threshold_s": 15.0,
    "memory_alert_threshold_mb": 2000.0,
    "always_profile_errors": true,
    "always_profile_slow_calls": true,
    "always_profile_expensive_calls": true,
    "always_profile_circuit_breaker": true
  },
  "security": {
    "secret_key": "REPLACE_WITH_ACTUAL_SECRET_KEY_FROM_ENV"
  }
}
